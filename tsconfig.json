{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./lib/types",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@di/*": ["src/di/*"],
      "@generic/*": ["src/generic/*"],
      "@state/*": ["src/state/*"]
    }
  },
  "include": ["src"]
}
